{
  "manifest_version": 3,
  "name": "Blob Log Tailer",
  "version": "1.4.0",
  "description": "Visor de logs en Azure Blob con auto-refresh, filtros, resaltado y optimizaci√≥n de descarga.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.blob.core.windows.net/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.blob.core.windows.net/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ]
}